<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_main">

    <fragment
        android:id="@+id/nav_main"
        android:name="com.example.emarket.ui.main.view.MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_productDetailsFragment"
            app:destination="@id/nav_productDetails" />
    </fragment>

    <fragment
        android:id="@+id/nav_productDetails"
        android:name="com.example.emarket.ui.productDetails.ProductDetailsFragment"
        tools:layout="@layout/fragment_product_details">
        <argument
            android:name="price"
            app:argType="string" />
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="image"
            app:argType="string" />
        <action
            android:id="@+id/action_productDetailsFragment_to_mainFragment"
            app:destination="@id/nav_main" />
    </fragment>
    <fragment
        android:id="@+id/nav_favorite"
        android:name="com.example.emarket.ui.favorite.view.FavoriteFragment"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/nav_cart"
        android:name="com.example.emarket.ui.cart.view.CartFragment"
        tools:layout="@layout/fragment_cart" />

</navigation>